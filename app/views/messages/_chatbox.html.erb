<%= turbo_stream_from "messages" %>
<div class="h-96 overflow-y-scroll text-textColorMain messagesContainer"
    data-controller="chat"
    data-chat-current-user-id-value="<%= current_user.id %>">
  <div id="messages" class="messagesInnerContainer">
    <% @messages.each do |message| %>
      <%= render partial: "messages/message", locals: {
              message: message,
              is_current_user_message: message.user_id == current_user.id
            }
      %>
    <% end %>
  </div>
</div>
